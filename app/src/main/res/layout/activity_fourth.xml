<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE870"
    tools:context=".FourthActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/blagoBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/zakrugkray"
        android:fontFamily="@font/qwe"
        android:text="Благоустройства"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.437" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/vneshBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/zakrugkray"
        android:fontFamily="@font/qwe"
        android:text="Внешнее устройство"
        app:layout_constraintEnd_toEndOf="@+id/blagoBtn"
        app:layout_constraintStart_toStartOf="@+id/blagoBtn"
        app:layout_constraintTop_toBottomOf="@+id/blagoBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>